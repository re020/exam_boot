<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.exam.ts.mapper.StudentPaperConfigQuestionMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.exam.ts.pojo.StudentPaperConfigQuestionDO">
        <id column="id" property="id" />
        <result column="question_config" property="questionConfig" />
        <result column="question_id" property="questionId" />
        <result column="question_state" property="questionState" />
        <association property="answerContent" javaType="com.exam.ts.pojo.StudentAnswerDO">
            <id column="answer_id" property="answerId"/>
            <result column="answer_content" property="answerContent"/>
        </association>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, question_config, question_id, question_state
    </sql>

    <select id="getByPaperId" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        answer_id,answer_content
        from
        te_student_paper
        inner join te_student_paper_config on config_paper = paper_id
        inner join te_student_paper_config_question on question_config = config_id
        inner join te_student_answer on question_id = answer_question
        where paper_id = #{value}
    </select>
</mapper>
